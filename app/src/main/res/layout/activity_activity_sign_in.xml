<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maidbrigade.maidbrigade.activity_sign_in"
    android:background="#ffffffff">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Sign In "
    android:id="@+id/sign_in_title"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:typeface="serif"
    android:textSize="40dp"
    android:textColor="#ff004785"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:layout_marginTop="51dp"
        android:text="Email"
        android:layout_below="@+id/sign_in_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/sign_in_button"
        android:layout_alignEnd="@+id/sign_in_button"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:layout_below="@+id/email"
        android:layout_marginTop="44dp"
        android:text="Password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_alignRight="@+id/email"
        android:layout_alignEnd="@+id/email" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:id="@+id/sign_in_button"
        android:textColor="#ffffffff"
        android:clickable="false"
        android:background="#ff004785"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="New Customer?"
        android:id="@+id/new_customer_text"
        android:textColor="#ff020204"
        android:layout_above="@+id/CreateAccountButtonSignIn"
        android:layout_centerHorizontal="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create An Account"
        android:id="@+id/CreateAccountButtonSignIn"
        android:onClick="clickButton"
        android:background="#00ffffff"
        android:textColor="#ff004785"
        android:layout_above="@+id/sign_in_button"
        android:layout_centerHorizontal="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:id="@+id/f_password_button"
        android:background="#00ffffff"
        android:textColor="#ff004785"
        android:onClick="sendEmail"
        android:layout_below="@+id/password"
        android:layout_alignLeft="@+id/CreateAccountButtonSignIn"
        android:layout_alignStart="@+id/CreateAccountButtonSignIn"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" />

</RelativeLayout>
