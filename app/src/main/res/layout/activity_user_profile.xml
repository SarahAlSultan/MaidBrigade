<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.maidbrigade.maidbrigade.UserProfileActivity"
    android:clickable="true"
    android:background="#ffffffff">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usericon"
        android:src="@drawable/newlogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:id="@+id/user_name"
        android:layout_below="@+id/usericon"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:typeface="serif" />

    <android.inputmethodservice.ExtractEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:id="@+id/phone_number_edit"
        android:layout_below="@+id/user_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:typeface="serif"
        android:textSize="15dp"
        android:textIsSelectable="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#5a4e4e4e"
        android:backgroundTintMode="src_in"
        android:editable="false"
        android:enabled="true" />

    <android.inputmethodservice.ExtractEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/email_edit"
        android:layout_below="@+id/phone_number_edit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:typeface="serif"
        android:textSize="15dp"
        android:textIsSelectable="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#5a4e4e4e"
        android:backgroundTintMode="src_in" />

    <android.inputmethodservice.ExtractEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Primary Address"
        android:id="@+id/p_address_edit"
        android:layout_below="@+id/email_edit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:typeface="serif"
        android:textSize="15dp"
        android:textIsSelectable="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#5a4e4e4e"
        android:backgroundTintMode="src_in" />

    <android.inputmethodservice.ExtractEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secondary Address"
        android:id="@+id/s_address_edit"
        android:layout_below="@+id/p_address_edit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:typeface="serif"
        android:textSize="15dp"
        android:textIsSelectable="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#5a4e4e4e"
        android:backgroundTintMode="src_in" />

    <android.inputmethodservice.ExtractEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History"
        android:id="@+id/order_history_edit"
        android:layout_below="@+id/s_address_edit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:typeface="serif"
        android:textSize="15dp"
        android:textIsSelectable="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#5a4e4e4e"
        android:backgroundTintMode="src_in" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="edit"
        android:id="@+id/email_edit_button"
        android:background="#00ffffff"
        android:textColor="#ff004785"
        android:textSize="15dp"
        android:layout_alignTop="@+id/email_edit"
        android:layout_toRightOf="@+id/user_name"
        android:layout_toEndOf="@+id/user_name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="edit"
        android:id="@+id/p_add__edit_button"
        android:background="#00ffffff"
        android:textColor="#ff004785"
        android:textSize="15dp"
        android:layout_alignTop="@+id/p_address_edit"
        android:layout_toRightOf="@+id/user_name"
        android:layout_toEndOf="@+id/user_name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="edit"
        android:id="@+id/s_add__edit_button"
        android:background="#00ffffff"
        android:textColor="#ff004785"
        android:textSize="15dp"
        android:layout_alignTop="@+id/s_address_edit"
        android:layout_toRightOf="@+id/user_name"
        android:layout_toEndOf="@+id/user_name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View"
        android:id="@+id/history_view_button"
        android:background="#00ffffff"
        android:textColor="#ff004785"
        android:textSize="15dp"
        android:layout_below="@+id/s_add__edit_button"
        android:layout_alignLeft="@+id/s_add__edit_button"
        android:layout_alignStart="@+id/s_add__edit_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="edit"
        android:id="@+id/name_edit_button"
        android:background="#00ffffff"
        android:textColor="#ff004785"
        android:textSize="15dp"
        android:layout_below="@+id/user_name"
        android:layout_toRightOf="@+id/user_name"
        android:layout_toEndOf="@+id/user_name" />

</RelativeLayout>
